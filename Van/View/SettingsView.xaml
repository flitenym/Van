<UserControl x:Class="Van.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:CustomControls;assembly=CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Blue/Blue.xaml" x:Name="blue" />
                <ResourceDictionary Source="/Themes/Green/Green.xaml" x:Name="green" />
                <ResourceDictionary Source="/Themes/Red/Red.xaml" x:Name="red" />
                <ResourceDictionary Source="/ThemesGlobal/Dark/Dark.xaml" x:Name="dark" />
                <ResourceDictionary Source="/ThemesGlobal/Light/Light.xaml" x:Name="light" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="Темы" TextAlignment="Center"/>
        <ScrollViewer Style="{DynamicResource SrollViewerControl}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal">
                <Button Width="45"
                        x:Name="Blue"
                        Command="{Binding ThemeAcceptor}"
                        CommandParameter="{Binding Name, ElementName=Blue}"
                        Style="{DynamicResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon Kind="Drop" Width="35" Height="Auto" Foreground="{DynamicResource BlueButton}"/>
                </Button>
                <Button Width="45"
                        x:Name="Green"
                        Command="{Binding ThemeAcceptor}"
                        CommandParameter="{Binding Name, ElementName=Green}"
                        Style="{DynamicResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon Kind="Drop" Width="35" Height="Auto" Foreground="{DynamicResource GreenButton}"/>
                </Button>
                <Button Width="45"
                        x:Name="Red"
                        Command="{Binding ThemeAcceptor}"
                        CommandParameter="{Binding Name, ElementName=Red}"
                        Style="{DynamicResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon Kind="Drop" Width="35" Height="Auto" Foreground="{DynamicResource RedButton}"/>
                </Button>
            </StackPanel>
        </ScrollViewer>
        <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="Темная или Светлая" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal">
            <Button Width="45"
                    x:Name="Dark"
                    Command="{Binding GlobalThemeAcceptor}"
                    CommandParameter="{Binding Name, ElementName=Dark}"
                    Style="{DynamicResource MaterialDesignToolForegroundButton}">
                <materialDesign:PackIcon Kind="Drop" Width="35" Height="Auto" Foreground="{DynamicResource DarkButton}"/>
            </Button>
            <Button Width="45"
                    x:Name="Light"
                    Command="{Binding GlobalThemeAcceptor}"
                    CommandParameter="{Binding Name, ElementName=Light}"
                    Style="{DynamicResource MaterialDesignToolForegroundButton}">
                <materialDesign:PackIcon Kind="Drop" Width="35" Height="Auto" Foreground="{DynamicResource LightButton}"/>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
