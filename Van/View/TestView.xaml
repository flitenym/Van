<UserControl x:Class="Van.View.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:controls="clr-namespace:CustomControls;assembly=CustomControls" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries> 
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Textblock.xaml" /> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15,0,0,0">
            <DataGrid Height="500"
                  Background="{x:Null}"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" 
                  x:Name="DataGrid" 
                  EnableRowVirtualization="True" 
                  EnableColumnVirtualization="False" 
                  ScrollViewer.CanContentScroll="True" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto" 
                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                  GridLinesVisibility="None" 
                  HeadersVisibility="Column" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding MortalityTable, Mode=TwoWay}" 
                  SelectionUnit="FullRow" 
                  ColumnWidth="*"
                  CanUserSortColumns="True">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource DataGridRowSelected}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Background" Value="{DynamicResource DataGridBackground}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="Transparent"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="Transparent" />
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".56"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="{DynamicResource DataGridBackground}" />
                        <Setter Property="Foreground" Value="{DynamicResource DataGridForeground}" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource DataGridRowSelected}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource DataGridForeground}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
            <Button Height="35"
                    Width="250"
                    HorizontalAlignment="Center" 
                    Content="Обновить таблицу"
                    Command="{Binding UpdateMortalityCommand}" 
                    Foreground="{DynamicResource PreWindowButtonForeground}"
                    Style="{DynamicResource MaterialDesignRaisedButton}" >
            </Button>
            <Grid Height="15">
                <Separator VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
            </Grid>
            <Grid Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource MaterialDesignTitleTextBlock}" Text="Распределение Вейбулла:" HorizontalAlignment="Left"/>
                <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding WeibullValue}" Foreground="{DynamicResource WindowForeground}"/> 
                
                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource MaterialDesignTitleTextBlock}" Text="Экспоненциальное распределение:" HorizontalAlignment="Left"/>
                <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding ExponentialValue}" Foreground="{DynamicResource WindowForeground}"/> 
                
                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource MaterialDesignTitleTextBlock}" Text="Распределение Рэлея:" HorizontalAlignment="Left"/>
                <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding RelayValue}" Foreground="{DynamicResource WindowForeground}"/> 
                
                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource MaterialDesignTitleTextBlock}" Text="Распределение Гомпертца:" HorizontalAlignment="Left"/>
                <Label Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding GompertzValue}" Foreground="{DynamicResource WindowForeground}"/>

                <Button Grid.Row="4" 
                        Grid.ColumnSpan="2" 
                        HorizontalAlignment="Center" 
                        Width="250"
                        Content="Вычислить параметры"
                        Command="{Binding CalculateCommand}" 
                        Foreground="{DynamicResource PreWindowButtonForeground}"
                        Style="{DynamicResource MaterialDesignRaisedButton}" >
                </Button>
                <Button Grid.Row="5" 
                        Grid.ColumnSpan="2" 
                        HorizontalAlignment="Center" 
                        Width="250"
                        Content="Вычислить число умерших d(x)"
                        Command="{Binding CalculateNumberOfDeadCommand}" 
                        Foreground="{DynamicResource PreWindowButtonForeground}"
                        Style="{DynamicResource MaterialDesignRaisedButton}" >
                </Button>

            </Grid>
            <Grid Height="300" Margin="5">
                <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Right" >
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Sales" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Month" Labels="{Binding Labels}"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Grid>
        </StackPanel>
    </ScrollViewer>

</UserControl>
